@{
    Layout = "_Layout"; // Or your shared layout
    ViewData["Title"] = "Category Management";
}

<div class="container mt-4">
    <h2>Category Management</h2>

    <form id="categoryForm" onsubmit="event.preventDefault(); saveCategory();">
        <input type="hidden" id="categoryId" />

        <div class="form-group">
            <label>Category Name</label>
            <input type="text" id="categoryName" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Category Type Id</label>
            <input type="number" id="categoryTypeId" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Active</label>
            <input type="checkbox" id="isActive" />
        </div>

        <div class="form-group">
            <label>Image</label>
            <input type="file" id="imageFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>

    <hr />

    <h3>Category List</h3>
    <table id="categoryTable" class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>TypeId</th>
                <th>Active</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/category/category.js"></script>
   
}
